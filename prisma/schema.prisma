generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  role  String @default("user") 
  cartItems CartItem[]
}

model Product {
  id       Int        @id @default(autoincrement())
  name     String
  quantity Int
  price    Float
}


model CartItem {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  total     Float
  productIds Json
  createdAt DateTime @default(now() )
}
